<script type="text/javascript">
    var clickCount = 0;
    $(function () {
        $(".hotel_tabs_box li").each(function () {
            $(this).click(function () {
                $(".hotel_tabs_box li").removeClass("current");
                $(this).addClass("current");
                var tabIndex = $(this).attr('tabIndex');
                $(".hotel_tabs_box").addClass("disabled");
                setTimeout(SetTab(tabIndex), 1200);
                //SetTab($(this).attr('tabIndex'));
            });
        });

        SetTab("1");

        //$("body").mousemove(function(){event.returnValue=false;});
    });

    function SetTab(tabIndex) {
        switch (tabIndex) {
            case "1": GetSchoolContent(1); break;
            case "2": GetSchoolContent(2); break;
            case "3": GetSchoolDigitalContent(1); break;
            case "4": GetSchoolDigitalContent(2); break;
        }
        $(".hotel_tabs_box").removeClass("disabled");
    }

    function GetSchoolContent(type) {
        $("#divSchoolPicture").hide();
        $("#divSchoolVideo").hide();

        if (type == 1) {
            $("#divSchoolInfo").show();
            $("#divSchoolFeture").hide();
            if ($("#divSchoolInfo").html() != "") {
                return;
            }
            
            $("#divSchoolInfo").html('');

        } else {
            $("#divSchoolFeture").show();
            $("#divSchoolInfo").hide();
            if ($("#divSchoolFeture").html() != "") {
                return;
            }

            $("#divSchoolFeture").html('');
        }

        

        $.ajax({
            url: "../DigitalContent/GetSchoolContent",
            data: { type: type },
            type: 'POST',
            dataType: 'json',
            async: false,
            success: function (data) {
                if (type == 1) {
                    $("#divSchoolInfo").html(data);
                } else {
                    $("#divSchoolFeture").html(data);
                }
            },
            error: function (xhr, textStatus) {
                alert('对不起，系统发生错误，请重试');
            }
        });
    }

    function GetSchoolDigitalContent(type) {
        $("#divSchoolInfo").hide();
        $("#divSchoolFeture").hide();

        if (type == 1) {
            $("#divSchoolPicture").show();
            $("#divSchoolVideo").hide();
            if ($("#divSchoolPicture").html() != "") {
                jQuery("#divSchoolPicture").nanoGallery({ thumbnailWidth: 260, thumbnailHeight: 200,
                    displayCaption: true,
                    displayBreadcrumb: true,
                    thumbnailHoverEffect: [{ 'name': 'descriptionSlideUp', 'duration': 300 }, { 'name': 'borderLighter'}],
                    colorScheme: 'light'
                });

                return;
            }

            $("#divSchoolPicture").html('');

        } else {
            $("#divSchoolVideo").show();
            $("#divSchoolPicture").hide();

            if ($("#divSchoolVideo").html() != "") {
                return;
            }

            $("#divSchoolVideo").html('');
        }



        $.ajax({
            url: "../DigitalContent/GetSchoolDigitalContent",
            data: { type: type },
            type: 'POST',
            dataType: 'json',
            async: false,
            success: function (data) {
                if (type == 1) {
                    $("#PictureTmpl").tmpl({ DigitalContentList: data }).appendTo($('#divSchoolPicture').html(''));

                    jQuery("#divSchoolPicture").nanoGallery({ thumbnailWidth: 260, thumbnailHeight: 200,
                        displayCaption: true,
                        displayBreadcrumb: true,
                        thumbnailHoverEffect: [{ 'name': 'descriptionSlideUp', 'duration': 300 }, { 'name': 'borderLighter'}],				
                        colorScheme: 'light'
                    });

                } else {
                    $("#VideoTmpl").tmpl({ DigitalContentList: data }).appendTo($('#divSchoolVideo').html(''));
                    $(".videoContainer").each(function () {
                        $(this).click(function () {
                            window.external.kitBrowser_PlayVideo($(this).attr('path'));
                        });
                    });

                }
            },
            error: function (xhr, textStatus) {
                alert('对不起，系统发生错误，请重试');
            }
        });
    }

</script>



